# MVANet API 环境变量配置示例
# 复制此文件为 .env 并根据需要修改配置

# 模型配置
MODEL_WEIGHTS_PATH=./weights/mvanet.pth        # 模型权重文件路径
MODEL_INPUT_SIZE=256,256                       # 模型输入尺寸 (height,width)

# 服务器配置
HOST=0.0.0.0                                   # 服务器监听地址
PORT=8000                                      # 服务器监听端口
DEVICE=cuda                                    # 设备类型 (cuda/cpu)

# 图像处理配置
IMAGE_MAX_SIZE=4096                            # 最大图像尺寸（像素）
THRESHOLD=0.5                                  # 分割阈值

# 性能配置
BATCH_SIZE_LIMIT=1                             # 批处理大小限制

# CORS 配置
ALLOWED_ORIGINS=http://localhost,http://127.0.0.1  # 允许的跨域域名，逗号分隔

# 日志配置
LOG_LEVEL=INFO                                 # 日志级别 (DEBUG/INFO/WARNING/ERROR)